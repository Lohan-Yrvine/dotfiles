# Allow hidden files on search
--hidden

# Directories to ignore
--glob=!.git/*
--glob=!.idea/*
--glob=!.vscode/*
--glob=!obj/*
--glob=!bin/*
--glob=!target/*
--glob=!node_modules/*
--glob=!dist/*
--glob=!build/*
--glob=!**/static/assets/*

# Files to ignore
--glob=!*.lock
--glob=!pnpm-lock.yaml
--glob=!main
--glob=!*.o
--glob=!*.gcno
--glob=!*.gcda
--glob=!*.db
--glob=!**/static/*/*.min.*
